		case PHASE_AT_CGDCONT:
'				if CELL__SIM_MODEL_IS_7000 then
'					cell__op_at_phase = PHASE_AT_CSTT
'				else
'					cell__op_at_phase = PHASE_AT_CGREG
'				end if	
			
