    sub cell__reverse_polarity(byref pwr_object as en_cell__pwr_objects, rev_polarity as no_yes)
    	'Define varables
        dim pwr_object_str as string(CELL__16b_LEN)
        dim state_ison_str as string(CELL__4b_LEN)

        select case pwr_object 
            case STATUS:
